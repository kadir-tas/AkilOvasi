<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="pagerAdapter"
            type="com.company.akilovasi.ui.common.FragmentPagerAdapter" />
        <variable
            name="loading"
            type="boolean" />
    </data>

    <FrameLayout
        android:background="@drawable/plant_add_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.plant.PlantCategoryActivity">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/wooden_sign"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:contentDescription="TODO" />

                    <TextView
                        android:id="@+id/user_name_garden"
                        android:text="@string/support"
                        android:layout_gravity="center"
                        android:textColor="@color/layout_white"
                        android:textSize="35sp"
                        android:textStyle="bold"
                        android:layout_marginTop="19dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </FrameLayout>
            </LinearLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewpager"
                app:setAdapter="@{pagerAdapter}"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <com.google.android.material.tabs.TabLayout
                    app:tabIndicator="@color/transparent"
                    app:tabBackground="@drawable/tab_selector_color"
                    android:id="@+id/tab_layout"
                    app:tabMode="auto"
                    app:tabGravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </androidx.viewpager.widget.ViewPager>
            <include
                android:id="@+id/bottom_appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                layout="@layout/bottom_app_bar" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>
        
        <androidx.core.widget.ContentLoadingProgressBar
            android:visibility="@{loading ? View.VISIBLE : View.GONE}"
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </FrameLayout>
</layout>