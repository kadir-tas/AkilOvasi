<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="addPlantClick"
            type="com.company.akilovasi.ui.main.callbacks.AddPlantClick" />
    </data>

    <FrameLayout
        android:background="@drawable/bg_main"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">

                <include
                    android:id="@+id/plantRecyclerView"
                    layout="@layout/plant_rv_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

            </androidx.coordinatorlayout.widget.CoordinatorLayout>

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:id="@+id/main_content"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.bottomappbar.BottomAppBar
                    android:id="@+id/bottom_appbar"
                    style="@style/Widget.MaterialComponents.BottomAppBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    app:fabAlignmentMode="center"
                    app:fabAnimationMode="scale"
                    app:fabCradleRoundedCornerRadius="50dp">

                    <LinearLayout
                        android:layout_marginHorizontal="20dp"
                        android:weightSum="4"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/ic_profile_black"
                            android:id="@+id/bottom_bar_profile"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:id="@+id/bottom_bar_shop"
                            android:src="@drawable/ic_shop"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="80dp"/>
                        <ImageView
                            android:id="@+id/bottom_bar_youtube"
                            android:src="@drawable/ic_play"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:id="@+id/bottom_bar_support"
                            android:src="@drawable/ic_support"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>


                </com.google.android.material.bottomappbar.BottomAppBar>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/middle_fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_strawberry"
                    app:backgroundTint="@color/white_cardview_color"
                    app:borderWidth="0dp"
                    app:elevation="6dp"
                    app:fabSize="normal"
                    app:layout_anchor="@id/bottom_appbar"
                    app:maxImageSize="35dp" />
            </androidx.coordinatorlayout.widget.CoordinatorLayout>

        </LinearLayout>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_marginBottom="75dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/addPlantFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> addPlantClick.onAddPlantClick()}"
            android:src="@drawable/add_plant"
            app:backgroundTint="@color/white_cardview_color"
            app:borderWidth="0dp"
            android:layout_gravity="bottom|end"
            app:elevation="40dp"
            app:fabSize="normal"
            app:maxImageSize="35dp" />


    </FrameLayout>

</layout>











