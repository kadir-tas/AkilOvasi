<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>

        <variable
            name="adapter"
            type="com.company.akilovasi.ui.notification.adapters.NotificationRvAdapter" />
    </data>
    
    <LinearLayout
        android:background="@color/layout_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.recyclerview.widget.RecyclerView
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:id="@+id/notifications_rv"
            app:adapter="@{adapter}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/empty_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="@{ adapter.isEmpty ? View.VISIBLE : View.GONE }"
            android:text="@string/no_notification_available" />

        <Button
            android:id="@+id/dummy"
            android:text="create_dummy_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/dummy_remove"
            android:text="remove_all_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</layout>
